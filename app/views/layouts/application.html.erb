<!DOCTYPE html>
<html>
<head>
<title>point ninja</title>
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<%= csrf_meta_tags %>

<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
<!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0&#45;alpha.5/css/bootstrap.min.css" integrity="sha384&#45;AysaV+vQoT3kOAXZkl02PThvDr8HYKPZhNT5h/CXfBThSRXQ6jW5DO2ekP5ViFdi" crossorigin="anonymous"> -->

<script>
window.alertPartyRestart = true;

window.startPolling = function(url) {
  $(function() {
      setInterval(function() {
        $.get(url);
      }, 1000);
  });
}
</script>
</head>

<body>
  <div class="container">

  <nav class="navbar navbar-light bg-faded">
    <a class="navbar-brand" href="#">
      <img src="/assets/ninja.svg" width="30" height="30" class="d-inline-block align-top" alt="">
      Point Ninja
    </a>
  </nav>

  <div class="points col-lg-4">
    <%= flash['notice'] %>
    <%= yield %>
  </div>
</div><!-- /.container -->

</body>
</html>
